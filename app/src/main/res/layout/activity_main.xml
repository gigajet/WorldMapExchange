<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/expressionField"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_Expression"
            android:text="0"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:maxLines="3"
            android:maxLength="60"
            android:layout_weight="8">
        </TextView>
        <TextView
            android:id="@+id/txt_Base_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="USD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:onClick="onChangeBaseClick">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/resultField"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/expressionField"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_Exp_Result"
            android:text="0"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:maxLines="3"
            android:layout_weight="8">
        </TextView>
        <TextView
            android:id="@+id/txt_Base_2"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="USD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="2">
        </TextView>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/currencyList"
        android:layout_below="@id/resultField"
        android:layout_above="@id/AddCurrency"
        android:layout_weight="3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/add_button_hint"
        android:id="@+id/AddCurrency"
        android:onClick="onAddButtonClick"
        android:layout_above="@id/padField"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:id="@+id/padField"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_7"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_8"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_9"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_4"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_5"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_6"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_3"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_dot"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="onExpressionClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_0"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_convert"
                    android:layout_weight="1"
                    android:src="@drawable/ic_equal"
                    android:onClick="onConvertClick"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:src="@drawable/ic_back_24px"
                android:onClick="onBackspaceClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_add"
                android:layout_weight="1"
                android:src="@drawable/ic_add_24px"
                android:onClick="onExpressionClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_sub"
                android:layout_weight="1"
                android:src="@drawable/ic_sub_24px"
                android:onClick="onExpressionClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_mul"
                android:layout_weight="1"
                android:src="@drawable/ic_mul_24px"
                android:onClick="onExpressionClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_div"
                android:layout_weight="1"
                android:src="@drawable/ic_div"
                android:onClick="onExpressionClick"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>