<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/expressionField"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_Expression"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="9"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="20dp"
            android:lines="1"
            android:maxLength="25"
            android:layout_weight="0.9"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_Base_1"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="USD"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            android:onClick="onChangeBaseClick"
            >

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/resultField"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below
            ="@id/expressionField"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_Exp_Result"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="9"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="20dp"
            android:lines="1"
            android:maxLength="25"
            android:layout_weight="0.9
"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_Base_2"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0.1">
        </TextView>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currencyList"
        android:layout_below="@id/resultField"
        android:layout_above="@id/AddCurrency"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Map"
        android:id="@+id/AddCurrency"
        android:onClick="onAddButtonClick"
        android:layout_above="@id/padField"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:id="@+id/padField"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_7"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_8"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_9"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_4"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_5"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_6"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_3"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_dot"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="onExpressionClick"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_0"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    android:onClick="numpadClick"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_convert"
                    android:layout_weight="1"
                    android:src="@drawable/ic_equal"
                    android:onClick="onConvertClick"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:src="@drawable/ic_back_24px"
                android:onClick="onBackspaceClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_add"
                android:layout_weight="1"
                android:src="@drawable/ic_add_24px"
                android:onClick="onExpressionClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_sub"
                android:layout_weight="1"
                android:src="@drawable/ic_sub_24px"
                android:onClick="onExpressionClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_mul"
                android:layout_weight="1"
                android:src="@drawable/ic_mul_24px"
                android:onClick="onExpressionClick"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btn_div"
                android:layout_weight="1"
                android:src="@drawable/ic_div"
                android:onClick="onExpressionClick"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

